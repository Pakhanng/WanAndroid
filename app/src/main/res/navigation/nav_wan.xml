<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="me.pakhang.wanandroid.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_fragment_to_web_view_fragment"
            app:destination="@id/web_view_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_user_profile_fragment"
            app:destination="@id/user_profile_fragment" />
    </fragment>

    <fragment
        android:id="@+id/project_fragment"
        android:name="me.pakhang.wanandroid.ui.project.ProjectFragment"
        android:label="@string/project"
        tools:layout="@layout/fragment_project">
        <action
            android:id="@+id/action_project_fragment_to_web_view_fragment"
            app:destination="@id/web_view_fragment" />
    </fragment>

    <fragment
        android:id="@+id/knowledge_fragment"
        android:name="me.pakhang.wanandroid.ui.knowledge.KnowledgeFragment"
        android:label="@string/knowledge"
        tools:layout="@layout/fragment_knowledge" >
        <action
            android:id="@+id/action_knowledge_fragment_to_knowledge_article_fragment"
            app:destination="@id/knowledge_article_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navi_fragment"
        android:name="me.pakhang.wanandroid.ui.navi.NaviFragment"
        android:label="@string/navi"
        tools:layout="@layout/fragment_navi" />

    <fragment
        android:id="@+id/collect_fragment"
        android:name="me.pakhang.wanandroid.ui.collect.CollectFragment"
        android:label="@string/collect"
        tools:layout="@layout/fragment_collect" />

    <fragment
        android:id="@+id/web_view_fragment"
        android:name="me.pakhang.wanandroid.ui.WebViewFragment"
        android:label="加载中"
        tools:layout="@layout/fragment_web_view">
        <argument
            android:name="link"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="me.pakhang.wanandroid.ui.user.LoginFragment"
        android:label="登录"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/user_profile_fragment"
        android:name="me.pakhang.wanandroid.ui.user.UserProfileFragment"
        android:label="用户" />

    <fragment
        android:id="@+id/knowledge_article_fragment"
        android:name="me.pakhang.wanandroid.ui.knowledge.KnowledgeArticleFragment"
        android:label="文章列表" >
        <argument
            android:name="cid"
            app:argType="integer" />
    </fragment>
</navigation>