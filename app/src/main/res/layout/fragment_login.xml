<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="me.pakhang.wanandroid.model.UserPost" />

        <variable
            name="gotoLogin"
            type="android.view.View.OnClickListener" />

        <variable
            name="gotoRegister"
            type="android.view.View.OnClickListener" />

        <variable
            name="login"
            type="android.view.View.OnClickListener" />

        <variable
            name="register"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.user.LoginFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/wan_logo" />

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="用户名" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="16dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="密码"
            android:inputType="textPassword" />

        <FrameLayout
            android:id="@+id/scene_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/scene_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:enabled="@{user.username.length() > 0 &amp;&amp; user.password.length() > 0}"
                    android:onClick="@{login}"
                    android:text="登录"
                    android:theme="@style/PrimaryButton" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:onClick="@{gotoRegister}"
                    android:text="注册账号" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scene_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="确认密码"
                    android:inputType="textPassword" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:enabled="@{user.username.length() > 0 &amp;&amp; user.password.length() > 0 &amp;&amp; user.confirmPassword.length() > 0}"
                    android:onClick="@{register}"
                    android:text="注册"
                    android:theme="@style/PrimaryButton" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:onClick="@{gotoLogin}"
                    android:text="直接登录" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>